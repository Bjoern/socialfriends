<%- @scripts = [] unless @scripts -%>
<%- @scripts << 'application' -%>
<h1>Find Social Friends</h1>
<%= render :partial => "/basic_search_form" %>
<h1>Results</h1>
<%- if flash[:notice] -%>
    <div class="flash_notice"><%= h(flash[:notice]) %></div>
<%- end -%>
<div id='search_results'>
    <%- @results = [] unless @results -%>
    <%= "No search results found" unless @results.size > 0 %>
    <%- @results.each_index do |i| -%>
        <%- result = @results[i] -%>
        <div class="action" id="action<%= i %>"> 
            <a id="action_url<%= i %>" href="<%= h(result.url) %>" class="action-title"><%= h(result.title) %></a>
                    <div class="action-description">
                         <%= result.description %>
                    </div>

                    <div class='action-details'>
                            <span class='action-type'><%= h(result.action_type[:name]) %></span>
                      created
                      <span class='action-created'><%= h(result.created_at) %></span>
                      on
                      <a href="<%= h(result.site[:url]) %>"><%= h(result.site[:name]) %></a>
                      <span class='action-hitcount'>
                        views:
                      </span>
                        <%= h(result.hit_count) %> 
                      <span class='action-referrercount'>
                        unique referrers:
                      </span>
                        <%= h(result.referrer_count) %>
                    </div>
                    <div class="twitterers" id="twitterers<%= i %>">
                        <h3>People on Twitter referring to this action:</h3>
                        <%= image_tag 'ajax-loader.gif', :alt => 'Loading' %> Checking for references on Twitter...
                    </div>
                    <div>
                        <a href="http://twitter.com/home?status=<%= CGI::escape("This looks like a worthy cause: #{h(result.url)} (Please Retweet)") %>">Tweet this action</a>
                    </div>
            </div>
    <%- end -%>
